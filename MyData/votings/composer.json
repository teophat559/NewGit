{
    "name": "bvote/voting-system",
    "description": "Advanced Voting System with Auto-Login and Contest Management",
    "type": "project",
    "keywords": ["voting", "contest", "automation", "php"],
    "license": "MIT",
    "authors": [
        {
            "name": "BVOTE Team",
            "email": "admin@bvote.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-openssl": "*",
        "firebase/php-jwt": "^6.0",
        "vlucas/phpdotenv": "^5.0",
        "monolog/monolog": "^2.0",
        "ramsey/uuid": "^4.0",
        "phpmailer/phpmailer": "^6.0",
        "predis/predis": "^2.0",
        "symfony/http-foundation": "^4.4",
        "symfony/validator": "^4.4",
        "symfony/security": "^4.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.0",
        "symfony/var-dumper": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "BVOTE\\": "src/",
            "BVOTE\\Components\\": "components/",
            "BVOTE\\Services\\": "services/",
            "BVOTE\\Core\\": "core/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BVOTE\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "stan": "phpstan analyse",
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\"",
            "php -r \"chmod('.env', 0600);\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
